<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2020/05/logo-UISRAEL.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30"/>
            <Entry x:Name="txtusuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"></Entry>

            <Button x:Name="btnIniciar" Text="Iniciar" Background="Gray" BorderRadius="20" TextColor="Red" Clicked="btnIniciar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>